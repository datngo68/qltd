@model QuanLyAnTrua.Models.ViewModels.ExpenseViewModel

@{
    ViewData["Title"] = "Thêm chi phí";
}

<h2><i class="bi bi-plus-circle"></i> Thêm chi phí</h2>
<hr />

<div class="row">
    <div class="col-12 col-md-6">
        <form asp-action="Create" method="get" id="filterForm">
            @if (Context.Session.GetString("Role") == "SuperAdmin" && ViewBag.Groups != null)
            {
                <div class="mb-3">
                    <label class="form-label">Lọc theo nhóm</label>
                    <select name="groupId" class="form-select" onchange="document.getElementById('filterForm').submit();">
                        <option value="">-- Tất cả nhóm --</option>
                        @foreach (var group in (List<QuanLyAnTrua.Models.Group>)ViewBag.Groups)
                        {
                            <option value="@group.Id" selected="@(ViewBag.SelectedGroupId != null && ViewBag.SelectedGroupId == group.Id)">
                                @group.Name
                            </option>
                        }
                    </select>
                </div>
            }
        </form>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Context.Session.GetString("Role") == "SuperAdmin" && ViewBag.SelectedGroupId != null)
            {
                <input type="hidden" name="groupId" value="@ViewBag.SelectedGroupId" />
            }

            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PayerId" class="form-label"></label>
                @if (Context.Session.GetString("Role") == "User")
                {
                    @* User thường chỉ có thể chọn bản thân làm payer *@
                    var currentUserId = Context.Session.GetInt32("UserId");
                    var currentUser = Model.AllUsers?.FirstOrDefault(u => u.Id == currentUserId);
                    <input type="hidden" asp-for="PayerId" value="@currentUserId" />
                    <input type="text" class="form-control" value="@(currentUser?.Name ?? "Bạn")" readonly />
                    <small class="text-muted">Bạn chỉ có thể chọn bản thân làm người chi tiền</small>
                }
                else
                {
                    <select asp-for="PayerId" class="form-select"
                        asp-items="@(new SelectList(Model.AllUsers ?? new List<QuanLyAnTrua.Models.User>(), "Id", "Name"))">
                        <option value="">-- Chọn người chi tiền --</option>
                    </select>
                }
                <span asp-validation-for="PayerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ExpenseDate" class="form-label"></label>
                <input asp-for="ExpenseDate" class="form-control" type="date" />
                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Người sử dụng <span class="text-danger">*</span></label>
                
                @* Tìm kiếm và nút điều khiển *@
                <div class="mb-2">
                    <div class="input-group mb-2">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="userSearchInput" placeholder="Tìm kiếm người dùng..." />
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="button" class="btn btn-sm btn-outline-primary" id="selectAllBtn">
                            <i class="bi bi-check-all"></i> Chọn tất cả
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="deselectAllBtn">
                            <i class="bi bi-x-square"></i> Bỏ chọn tất cả
                        </button>
                        <span class="badge bg-info align-self-center ms-auto" id="selectedCount">
                            Đã chọn: <span id="countNumber">0</span>
                        </span>
                    </div>
                </div>

                @* Danh sách người dùng *@
                <div class="border p-3 rounded" style="max-height: 300px; overflow-y: auto; background-color: #f8f9fa;" id="usersList">
                    @if (Model.AllUsers != null)
                    {
                        @foreach (var user in Model.AllUsers)
                        {
                            var isChecked = Model.ParticipantIds != null && Model.ParticipantIds.Contains(user.Id);
                            <div class="form-check py-2 user-item" data-user-name="@user.Name.ToLower()">
                                <input class="form-check-input participant-checkbox" type="checkbox" name="ParticipantIds" value="@user.Id"
                                    id="user_@user.Id" @(isChecked ? "checked" : "") />
                                <label class="form-check-label" for="user_@user.Id" style="cursor: pointer; font-size: 0.95rem;">
                                    <i class="bi bi-person"></i> @user.Name
                                </label>
                            </div>
                        }
                    }
                </div>
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-info-circle"></i> Mặc định tất cả người dùng đã được chọn. Bỏ tích những người không ăn.
                </small>
                <span asp-validation-for="ParticipantIds" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SendTelegram" value="true" id="sendTelegram" />
                    <label class="form-check-label" for="sendTelegram">
                        <i class="bi bi-send"></i> Gửi nhắc Telegram cho những người trong danh sách ăn
                    </label>
                </div>
                <small class="text-muted d-block mt-1">
                    <i class="bi bi-info-circle"></i> Chỉ gửi cho những người đã cập nhật Telegram User ID trong thông tin cá nhân
                </small>
            </div>

            <div class="mb-3 d-flex flex-column flex-md-row gap-2">
                <button type="submit" class="btn btn-primary w-100 w-md-auto">Thêm</button>
                <a asp-action="Index" class="btn btn-secondary w-100 w-md-auto">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('userSearchInput');
            const selectAllBtn = document.getElementById('selectAllBtn');
            const deselectAllBtn = document.getElementById('deselectAllBtn');
            const countNumber = document.getElementById('countNumber');
            const userItems = document.querySelectorAll('.user-item');
            const checkboxes = document.querySelectorAll('.participant-checkbox');

            // Hàm cập nhật số người đã chọn
            function updateSelectedCount() {
                const visibleCheckboxes = Array.from(checkboxes).filter(cb => {
                    const item = cb.closest('.user-item');
                    return item && item.style.display !== 'none';
                });
                const checkedCount = visibleCheckboxes.filter(cb => cb.checked).length;
                countNumber.textContent = checkedCount;
            }

            // Tìm kiếm người dùng
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase().trim();
                    userItems.forEach(item => {
                        const userName = item.getAttribute('data-user-name') || '';
                        if (userName.includes(searchTerm)) {
                            item.style.display = '';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                    updateSelectedCount();
                });
            }

            // Chọn tất cả (chỉ những người đang hiển thị)
            if (selectAllBtn) {
                selectAllBtn.addEventListener('click', function() {
                    userItems.forEach(item => {
                        if (item.style.display !== 'none') {
                            const checkbox = item.querySelector('.participant-checkbox');
                            if (checkbox) {
                                checkbox.checked = true;
                            }
                        }
                    });
                    updateSelectedCount();
                });
            }

            // Bỏ chọn tất cả (chỉ những người đang hiển thị)
            if (deselectAllBtn) {
                deselectAllBtn.addEventListener('click', function() {
                    userItems.forEach(item => {
                        if (item.style.display !== 'none') {
                            const checkbox = item.querySelector('.participant-checkbox');
                            if (checkbox) {
                                checkbox.checked = false;
                            }
                        }
                    });
                    updateSelectedCount();
                });
            }

            // Cập nhật số đếm khi checkbox thay đổi
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectedCount);
            });

            // Khởi tạo số đếm ban đầu
            updateSelectedCount();
        });
    </script>
}
