@model IEnumerable<QuanLyAnTrua.Models.Expense>

@{
    ViewData["Title"] = "Danh sách chi phí";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-3">
    <h2 class="mb-0"><i class="bi bi-cash-coin"></i> Danh sách chi phí</h2>
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-2 w-100 w-md-auto">
        <form method="get" class="d-flex flex-column flex-md-row gap-2 w-100 w-md-auto" id="filterForm">
            @if (Context.Session.GetString("Role") == "SuperAdmin" && ViewBag.Groups != null)
            {
                <select name="groupId" class="form-select" style="min-width: 150px;" onchange="updateUrlParams()">
                    <option value="">-- Tất cả nhóm --</option>
                    @foreach (var group in (List<QuanLyAnTrua.Models.Group>)ViewBag.Groups)
                    {
                        var isSelected = ViewBag.SelectedGroupId != null && (int?)ViewBag.SelectedGroupId == group.Id;
                        <option value="@group.Id" selected="@isSelected">
                            @group.Name
                        </option>
                    }
                </select>
            }
            <select name="month" class="form-select" style="min-width: 120px;" onchange="updateUrlParams()">
                <option value="">-- Tất cả tháng --</option>
                @for (int i = 1; i <= 12; i++)
                {
                    var isSelected = ViewBag.SelectedMonth != null && (int?)ViewBag.SelectedMonth == i;
                    <option value="@i" selected="@isSelected">
                        Tháng @i
                    </option>
                }
            </select>
            <select name="year" class="form-select" style="min-width: 100px;" onchange="updateUrlParams()">
                <option value="">-- Tất cả năm --</option>
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                {
                    var isSelected = ViewBag.SelectedYear != null && (int?)ViewBag.SelectedYear == y;
                    <option value="@y" selected="@isSelected">
                        @y
                    </option>
                }
            </select>
        </form>
        <a asp-action="Create" class="btn btn-primary w-100 w-md-auto">
            <i class="bi bi-plus-circle"></i> Thêm chi phí
        </a>
    </div>
</div>

<script>
    function updateUrlParams() {
        const form = document.getElementById('filterForm');
        const formData = new FormData(form);
        const params = new URLSearchParams();

        // Lấy tất cả các giá trị từ form
        for (const [key, value] of formData.entries()) {
            if (value) {
                params.append(key, value);
            }
        }

        // Chuyển hướng với các tham số
        const url = '@Url.Action("Index")' + (params.toString() ? '?' + params.toString() : '');
        window.location.href = url;
    }
</script>

<div class="table-responsive">
    <table id="expensesTable" class="table table-striped table-hover" style="min-width: 800px;">
        <thead class="table-light">
            <tr>
                <th>Ngày chi</th>
                <th>Số tiền</th>
                <th>Người chi</th>
                <th>Số người</th>
                <th>Người sử dụng</th>
                <th>Số tiền/người</th>
                <th>Mô tả</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var participantCount = item.Participants.Count;
                var hasCustomAmounts = item.Participants.Any(p => p.Amount.HasValue);
                var amountPerPerson = participantCount > 0 ? item.Amount / participantCount : 0;
                <tr>
                    <td>@item.ExpenseDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.Amount.ToString("N0") đ</td>
                    <td>@item.Payer.Name</td>
                    <td class="text-center">
                        <span class="badge bg-primary">@participantCount</span>
                    </td>
                    <td>
                        @if (hasCustomAmounts)
                        {
                            <div>
                                @foreach (var participant in item.Participants.OrderBy(p => p.User.Name))
                                {
                                    <div class="small">
                                        @participant.User.Name: <strong class="text-primary">@(participant.Amount?.ToString("N0") ?? amountPerPerson.ToString("N0")) đ</strong>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            @string.Join(", ", item.Participants.Select(p => p.User.Name))
                        }
                    </td>
                    <td>
                        @if (hasCustomAmounts)
                        {
                            <span class="text-muted small">Khác nhau</span>
                        }
                        else
                        {
                            @amountPerPerson.ToString("N0") <text>đ</text>
                        }
                    </td>
                    <td>@(item.Description ?? "-")</td>
                    <td>
                        @{
                            var currentUserId = Context.Session.GetInt32("UserId");
                            var currentRole = Context.Session.GetString("Role");
                            var canEditDelete = currentRole != "User" || (currentUserId.HasValue && item.PayerId ==
                            currentUserId.Value);
                        }
                        @if (canEditDelete)
                        {
                            <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mb-1">Sửa</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa chi phí này?');">
                                    <button type="submit" class="btn btn-danger w-100">Xóa</button>
                                </form>
                            </div>
                            <div class="btn-group d-none d-md-inline-flex" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa chi phí này?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#expensesTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                },
                pageLength: 25,
                order: [[0, 'desc']], // Sắp xếp theo ngày chi giảm dần
                columnDefs: [
                    { orderable: false, targets: 7 } // Tắt sắp xếp cho cột Thao tác
                ]
            });
        });
    </script>
}
