@model QuanLyAnTrua.Models.User
@using QuanLyAnTrua.Helpers

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<h2><i class="bi bi-person-circle"></i> Thông tin tài khoản</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12 col-md-6">
        <form asp-action="Profile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">
                    <i class="bi bi-image"></i> Ảnh đại diện
                </label>
                <div class="d-flex align-items-center gap-3 mb-2">
                    <img id="avatarPreview" src="@AvatarHelper.GetAvatarUrl(Model.AvatarPath)" 
                         alt="Avatar" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover; border: 2px solid #dee2e6;" />
                    <div class="flex-grow-1">
                        <input type="file" name="avatarFile" id="avatarFile" accept="image/jpeg,image/jpg,image/png,image/gif,image/webp" class="form-control" />
                        <small class="form-text text-muted">Chấp nhận: JPG, PNG, GIF, WEBP (tối đa 3MB)</small>
                        @if (ViewData.ModelState["AvatarFile"]?.Errors?.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["AvatarFile"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <i class="bi bi-person"></i> Tên người dùng
                </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">
                    <i class="bi bi-at"></i> Tên đăng nhập
                </label>
                <input asp-for="Username" class="form-control" readonly />
                <small class="form-text text-muted">Tên đăng nhập không thể thay đổi</small>
            </div>

            <div class="mb-3">
                <label class="form-label">Vai trò</label>
                <input type="text" class="form-control" value="@Model.Role" disabled />
            </div>

            <hr class="my-4" />
            <h5 class="mb-3"><i class="bi bi-bank"></i> Thông tin tài khoản ngân hàng</h5>

            <div class="mb-3">
                <label asp-for="BankName" class="form-label">
                    <i class="bi bi-building"></i> Tên ngân hàng
                </label>
                <select asp-for="BankName" class="form-select" id="bankNameSelect" data-live-search="true">
                    <option value="">-- Chọn ngân hàng --</option>
                    @if (ViewBag.Banks != null)
                    {
                        var banks = ViewBag.Banks as List<QuanLyAnTrua.Helpers.BankInfo>;
                        @if (banks != null)
                        {
                            @foreach (var bank in banks)
                            {
                                <option value="@bank.Name" selected="@(Model.BankName == bank.Name)" data-bin="@bank.BIN">@bank.Name
                                    (@bank.ShortName)</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="BankName" class="text-danger"></span>
                <small class="form-text text-muted">Chọn ngân hàng có hỗ trợ QR code thanh toán</small>
            </div>

            <div class="mb-3">
                <label asp-for="BankAccount" class="form-label">
                    <i class="bi bi-credit-card"></i> Số tài khoản
                </label>
                <input asp-for="BankAccount" class="form-control" placeholder="Nhập số tài khoản ngân hàng" />
                <span asp-validation-for="BankAccount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AccountHolderName" class="form-label">
                    <i class="bi bi-person-badge"></i> Tên chủ tài khoản
                </label>
                <input asp-for="AccountHolderName" class="form-control" placeholder="Nhập tên chủ tài khoản" />
                <span asp-validation-for="AccountHolderName" class="text-danger"></span>
            </div>

            <hr class="my-4" />
            <h5 class="mb-3"><i class="bi bi-telegram"></i> Thông tin Telegram</h5>

            <div class="mb-3">
                <label asp-for="TelegramUserId" class="form-label">
                    <i class="bi bi-chat-dots"></i> Telegram User ID
                </label>
                <input asp-for="TelegramUserId" class="form-control" placeholder="Nhập Telegram User ID (ví dụ: 123456789)" />
                <span asp-validation-for="TelegramUserId" class="text-danger"></span>
                <small class="form-text text-muted">
                    <i class="bi bi-info-circle"></i> Để nhận thông báo qua Telegram khi có chi phí mới. 
                    Lấy User ID từ <a href="https://t.me/userinfobot" target="_blank">@@userinfobot</a> trên Telegram
                </small>
            </div>

            <hr class="my-4" />
            <h5 class="mb-3"><i class="bi bi-shield-lock"></i> CASSO Webhook Secret</h5>

            <div class="mb-3">
                <label asp-for="CassoWebhookSecret" class="form-label">
                    <i class="bi bi-key"></i> Webhook Secret
                </label>
                <input asp-for="CassoWebhookSecret" class="form-control" type="password" placeholder="Nhập Webhook Secret từ CASSO" />
                <span asp-validation-for="CassoWebhookSecret" class="text-danger"></span>
                <small class="form-text text-muted">
                    <i class="bi bi-info-circle"></i> Mã bảo mật webhook từ CASSO cho tài khoản ngân hàng này. 
                    Để trống nếu dùng WebhookSecret mặc định từ appsettings.json
                </small>
            </div>

            <div class="mb-3 d-flex flex-column flex-md-row gap-2">
                <button type="submit" class="btn btn-primary w-100 w-md-auto">
                    <i class="bi bi-save"></i> Lưu thông tin
                </button>
                <a asp-action="ChangePassword" class="btn btn-warning w-100 w-md-auto">
                    <i class="bi bi-key"></i> Đổi mật khẩu
                </a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary w-100 w-md-auto">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"
        rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bankNameSelect').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn hoặc tìm kiếm ngân hàng...',
                allowClear: true,
                language: {
                    noResults: function () {
                        return "Không tìm thấy ngân hàng";
                    },
                    searching: function () {
                        return "Đang tìm kiếm...";
                    }
                }
            });

            // Preview avatar khi chọn file
            $('#avatarFile').on('change', function(e) {
                var file = e.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#avatarPreview').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}
