@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<h2><i class="bi bi-key"></i> Đổi mật khẩu</h2>
<hr />

<div class="row">
    <div class="col-12 col-md-6">
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="mb-3">
                <label for="oldPassword" class="form-label">
                    <i class="bi bi-lock"></i> Mật khẩu cũ
                </label>
                <input type="password" class="form-control" id="oldPassword" name="oldPassword" required />
                @if (ViewData.ModelState["oldPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-danger">@ViewData.ModelState["oldPassword"]!.Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="mb-3">
                <label for="newPassword" class="form-label">
                    <i class="bi bi-lock-fill"></i> Mật khẩu mới
                </label>
                <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" />
                <small class="text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                @if (ViewData.ModelState["newPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-danger d-block">@ViewData.ModelState["newPassword"]!.Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">
                    <i class="bi bi-lock-fill"></i> Xác nhận mật khẩu mới
                </label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" />
                @if (ViewData.ModelState["confirmPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-danger d-block">@ViewData.ModelState["confirmPassword"]!.Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="mb-3 d-flex flex-column flex-md-row gap-2">
                <button type="submit" class="btn btn-primary w-100 w-md-auto">
                    <i class="bi bi-save"></i> Đổi mật khẩu
                </button>
                <a asp-action="Profile" class="btn btn-secondary w-100 w-md-auto">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Validate password match
        document.getElementById('confirmPassword').addEventListener('input', function() {
            var newPassword = document.getElementById('newPassword').value;
            var confirmPassword = this.value;
            
            if (newPassword !== confirmPassword) {
                this.setCustomValidity('Mật khẩu xác nhận không khớp');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
}

