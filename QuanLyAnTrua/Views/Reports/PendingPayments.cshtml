@model List<QuanLyAnTrua.Models.MonthlyPayment>

@{
    ViewData["Title"] = "Thanh toán chờ xác nhận";
    var monthNames = new[] { "", "Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6", "Tháng 7", "Tháng 8",
"Tháng 9", "Tháng 10", "Tháng 11", "Tháng 12" };
    var year = ViewBag.Year as int? ?? DateTime.Now.Year;
    var month = ViewBag.Month as int? ?? DateTime.Now.Month;
    var selectedGroupId = ViewBag.SelectedGroupId as int?;
    var isSuperAdmin = Context.Session.GetString("Role") == "SuperAdmin";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-3">
    <h2 class="mb-0"><i class="bi bi-clock-history"></i> Thanh toán chờ xác nhận</h2>
    <div class="w-100 w-md-auto">
        <form method="get" class="d-flex flex-column flex-md-row gap-2">
            <input type="number" name="year" value="@year" class="form-control" style="min-width: 100px;" min="2020"
                max="2100" />
            <select name="month" class="form-select" style="min-width: 150px;">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i" selected="@(i == month)">@monthNames[i]</option>
                }
            </select>
            @if (isSuperAdmin && ViewBag.Groups != null)
            {
                var groups = ViewBag.Groups as IEnumerable<QuanLyAnTrua.Models.Group>;
                <select name="groupId" class="form-select" style="min-width: 200px;">
                    <option value="">-- Tất cả nhóm --</option>
                    @if (groups != null)
                    {
                        @foreach (var group in groups)
                        {
                            <option value="@group.Id" selected="@(selectedGroupId == group.Id)">@group.Name</option>
                        }
                    }
                </select>
            }
            <button type="submit" class="btn btn-primary">Xem</button>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table id="pendingPaymentsTable" class="table table-striped table-hover" style="min-width: 600px;">
            <thead class="table-light">
                <tr>
                    <th>Người thanh toán</th>
                    <th>Số tiền</th>
                    <th>Ngày thanh toán</th>
                    <th>Ghi chú</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td><strong>@payment.User.Name</strong></td>
                        <td class="text-danger fw-bold">@payment.PaidAmount.ToString("N0") đ</td>
                        <td>@payment.PaidDate.ToString("dd/MM/yyyy")</td>
                        <td>@(payment.Notes ?? "-")</td>
                        <td>
                            <div class="btn-group-vertical btn-group-sm d-md-none w-100" role="group">
                                <form asp-action="ConfirmPayment" asp-controller="Reports" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xác nhận thanh toán này?');">
                                    <input type="hidden" name="id" value="@payment.Id" />
                                    <input type="hidden" name="year" value="@year" />
                                    <input type="hidden" name="month" value="@month" />
                                    @if (selectedGroupId.HasValue)
                                    {
                                        <input type="hidden" name="groupId" value="@selectedGroupId.Value" />
                                    }
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100 mb-1">
                                        <i class="bi bi-check-circle"></i> Xác nhận
                                    </button>
                                </form>
                                <form asp-action="Delete" asp-controller="Payments" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn từ chối thanh toán này? Hành động này sẽ xóa bản ghi thanh toán.');">
                                    <input type="hidden" name="id" value="@payment.Id" />
                                    <input type="hidden" name="year" value="@year" />
                                    <input type="hidden" name="month" value="@month" />
                                    @if (selectedGroupId.HasValue)
                                    {
                                        <input type="hidden" name="groupId" value="@selectedGroupId.Value" />
                                    }
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-x-circle"></i> Từ chối
                                    </button>
                                </form>
                            </div>
                            <div class="btn-group d-none d-md-inline-flex" role="group">
                                <form asp-action="ConfirmPayment" asp-controller="Reports" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xác nhận thanh toán này?');">
                                    <input type="hidden" name="id" value="@payment.Id" />
                                    <input type="hidden" name="year" value="@year" />
                                    <input type="hidden" name="month" value="@month" />
                                    @if (selectedGroupId.HasValue)
                                    {
                                        <input type="hidden" name="groupId" value="@selectedGroupId.Value" />
                                    }
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-sm">
                                        <i class="bi bi-check-circle"></i> Xác nhận
                                    </button>
                                </form>
                                <form asp-action="Delete" asp-controller="Payments" method="post" class="d-inline ms-1"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn từ chối thanh toán này? Hành động này sẽ xóa bản ghi thanh toán.');">
                                    <input type="hidden" name="id" value="@payment.Id" />
                                    <input type="hidden" name="year" value="@year" />
                                    <input type="hidden" name="month" value="@month" />
                                    @if (selectedGroupId.HasValue)
                                    {
                                        <input type="hidden" name="groupId" value="@selectedGroupId.Value" />
                                    }
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Từ chối
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Không có thanh toán nào đang chờ xác nhận trong tháng @month/@year.
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($('#pendingPaymentsTable').length) {
                $('#pendingPaymentsTable').DataTable({
                    language: {
                        url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                    },
                    pageLength: 25,
                    order: [[2, 'desc']], // Sắp xếp theo ngày thanh toán giảm dần
                    columnDefs: [
                        { orderable: false, targets: 4 } // Tắt sắp xếp cho cột Thao tác
                    ]
                });
            }
        });
    </script>
}
