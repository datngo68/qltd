@model IEnumerable<QuanLyAnTrua.Models.SharedReport>

@{
    ViewData["Title"] = "Quản lý link chia sẻ";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-3">
    <h2 class="mb-0"><i class="bi bi-link-45deg"></i> Quản lý link chia sẻ</h2>
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-2 w-100 w-md-auto">
        <form method="get" class="d-flex flex-column flex-md-row gap-2 w-100 w-md-auto" id="filterForm">
            @if (Context.Session.GetString("Role") == "SuperAdmin" && ViewBag.Groups != null)
            {
                <select name="groupId" class="form-select" style="min-width: 150px;" onchange="updateUrlParams()">
                    <option value="">-- Tất cả nhóm --</option>
                    @foreach (var group in (List<QuanLyAnTrua.Models.Group>)ViewBag.Groups)
                    {
                        var isSelected = ViewBag.SelectedGroupId != null && (int?)ViewBag.SelectedGroupId == group.Id;
                        <option value="@group.Id" selected="@isSelected">
                            @group.Name
                        </option>
                    }
                </select>
            }
            <select name="month" class="form-select" style="min-width: 120px;" onchange="updateUrlParams()">
                <option value="">-- Tất cả tháng --</option>
                @for (int i = 1; i <= 12; i++)
                {
                    var isSelected = ViewBag.SelectedMonth != null && (int?)ViewBag.SelectedMonth == i;
                    <option value="@i" selected="@isSelected">
                        Tháng @i
                    </option>
                }
            </select>
            <select name="year" class="form-select" style="min-width: 100px;" onchange="updateUrlParams()">
                <option value="">-- Tất cả năm --</option>
                @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                {
                    var isSelected = ViewBag.SelectedYear != null && (int?)ViewBag.SelectedYear == y;
                    <option value="@y" selected="@isSelected">
                        @y
                    </option>
                }
            </select>
        </form>
        <a asp-controller="Payments" asp-action="Index" class="btn btn-secondary w-100 w-md-auto">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<script>
function updateUrlParams() {
    const form = document.getElementById('filterForm');
    const formData = new FormData(form);
    const params = new URLSearchParams();
    
    // Lấy tất cả các giá trị từ form
    for (const [key, value] of formData.entries()) {
        if (value) {
            params.append(key, value);
        }
    }
    
    // Chuyển hướng với các tham số
    const url = '@Url.Action("SharedLinks")' + (params.toString() ? '?' + params.toString() : '');
    window.location.href = url;
}
</script>

@if (Model.Any())
{
    <div class="table-responsive">
        <table id="sharedLinksTable" class="table table-striped table-hover" style="min-width: 900px;">
            <thead class="table-light">
                <tr>
                    <th>Loại</th>
                    <th>Đối tượng</th>
                    <th>Link</th>
                    <th>Ngày tạo</th>
                    <th>Hết hạn</th>
                    <th>Lần truy cập cuối</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var shareUrl = Url.Action("PublicView", "Reports", new { token = item.Token }, Context.Request.Scheme);
                    var isExpired = item.ExpiresAt.HasValue && item.ExpiresAt.Value < DateTime.Now;
                    <tr>
                        <td>
                            @if (item.ReportType == "User")
                            {
                                <span class="badge bg-info"><i class="bi bi-person"></i> Người dùng</span>
                            }
                            else
                            {
                                <span class="badge bg-primary"><i class="bi bi-people"></i> Nhóm</span>
                            }
                        </td>
                        <td>
                            @if (item.ReportType == "User" && item.User != null)
                            {
                                @item.User.Name
                            }
                            else if (item.ReportType == "Group" && item.Group != null)
                            {
                                @item.Group.Name
                            }
                        </td>
                        <td>
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control form-control-sm" value="@shareUrl" readonly style="font-size: 0.85rem;">
                                <button class="btn btn-outline-secondary btn-sm" type="button" onclick="copyToClipboard('@shareUrl')">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (item.ExpiresAt.HasValue)
                            {
                                @if (isExpired)
                                {
                                    <span class="text-danger">@item.ExpiresAt.Value.ToString("dd/MM/yyyy HH:mm") <i class="bi bi-x-circle"></i></span>
                                }
                                else
                                {
                                    @item.ExpiresAt.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không giới hạn</span>
                            }
                        </td>
                        <td>
                            @if (item.LastAccessedAt.HasValue)
                            {
                                @item.LastAccessedAt.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">Chưa truy cập</span>
                            }
                        </td>
                        <td>
                            @if (isExpired)
                            {
                                <span class="badge bg-danger">Hết hạn</span>
                            }
                            else if (item.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Đã tắt</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group-vertical btn-group-sm d-md-none w-100" role="group">
                                <form asp-action="ToggleSharedLink" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn @(item.IsActive ? "btn-warning" : "btn-success") w-100 mb-1">
                                        <i class="bi bi-@(item.IsActive ? "pause" : "play")-fill"></i> @(item.IsActive ? "Tắt" : "Bật")
                                    </button>
                                </form>
                                <form asp-action="DeleteSharedLink" asp-route-id="@item.Id" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa link này?');">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </form>
                            </div>
                            <div class="btn-group d-none d-md-inline-flex" role="group">
                                <form asp-action="ToggleSharedLink" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-warning" : "btn-success")">
                                        <i class="bi bi-@(item.IsActive ? "pause" : "play")-fill"></i> @(item.IsActive ? "Tắt" : "Bật")
                                    </button>
                                </form>
                                <form asp-action="DeleteSharedLink" asp-route-id="@item.Id" method="post" class="d-inline"
                                    onsubmit="return confirm('Bạn có chắc chắn muốn xóa link này?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Chưa có link chia sẻ nào. 
        <a asp-controller="Payments" asp-action="Index">Tạo link chia sẻ mới</a>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($('#sharedLinksTable').length) {
                $('#sharedLinksTable').DataTable({
                    language: {
                        url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                    },
                    pageLength: 25,
                    order: [[3, 'desc']], // Sắp xếp theo ngày tạo giảm dần
                    columnDefs: [
                        { orderable: false, targets: 7 } // Tắt sắp xếp cho cột Thao tác
                    ]
                });
            }

            function copyToClipboard(text) {
                navigator.clipboard.writeText(text).then(function() {
                    alert('Đã copy link vào clipboard!');
                }, function() {
                    // Fallback
                    var textarea = document.createElement('textarea');
                    textarea.value = text;
                    document.body.appendChild(textarea);
                    textarea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textarea);
                    alert('Đã copy link vào clipboard!');
                });
            }
            window.copyToClipboard = copyToClipboard;
        });
    </script>
}

