@{
    ViewData["Title"] = "Quản lý Admin cho nhóm";
}

<h2><i class="bi bi-person-plus"></i> Quản lý Admin cho nhóm: @ViewBag.GroupName</h2>
<hr />

@{
    var existingAdmin = ViewBag.ExistingAdmin as QuanLyAnTrua.Models.User;
    var hasAdmin = existingAdmin != null;
}

@if (hasAdmin)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Nhóm này đã có admin: <strong>@existingAdmin.Name</strong>
        <br />
        <small>Bạn có thể sửa thông tin admin hoặc xóa admin để tạo admin mới.</small>
    </div>

    <!-- Form sửa admin -->
    <div class="row">
        <div class="col-md-6">
            <h4><i class="bi bi-pencil"></i> Sửa thông tin Admin</h4>
            <hr />
            <form asp-action="EditAdmin" method="post">
                <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                <input type="hidden" name="adminId" value="@existingAdmin.Id" />
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="mb-3">
                    <label for="editName" class="form-label">
                        <i class="bi bi-person"></i> Tên người dùng <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="editName" name="name" value="@existingAdmin.Name" required />
                </div>

                <div class="mb-3">
                    <label for="editUsername" class="form-label">
                        <i class="bi bi-at"></i> Tên đăng nhập <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="editUsername" name="username" value="@existingAdmin.Username" required />
                    @if (ViewData.ModelState["username"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["username"]!.Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="mb-3">
                    <label for="editPassword" class="form-label">
                        <i class="bi bi-lock"></i> Mật khẩu mới (để trống nếu không đổi)
                    </label>
                    <input type="password" class="form-control" id="editPassword" name="password" minlength="6" />
                    <small class="text-muted">Chỉ nhập mật khẩu mới nếu muốn đổi. Mật khẩu phải có ít nhất 6 ký tự.</small>
                    @if (ViewData.ModelState["password"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["password"]!.Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Cập nhật Admin
                    </button>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAdminModal">
                        <i class="bi bi-trash"></i> Xóa Admin
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal xóa admin -->
    <div class="modal fade" id="deleteAdminModal" tabindex="-1" aria-labelledby="deleteAdminModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteAdminModalLabel">Xác nhận xóa admin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa admin <strong>@existingAdmin.Name</strong>?</p>
                    <p class="text-danger"><small>Hành động này không thể hoàn tác. Sau khi xóa, bạn có thể tạo admin mới.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form asp-action="DeleteAdmin" method="post" class="d-inline">
                        <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                        <input type="hidden" name="adminId" value="@existingAdmin.Id" />
                        <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Form tạo admin mới -->
    <div class="row">
        <div class="col-md-6">
            <h4><i class="bi bi-person-plus"></i> Tạo Admin mới</h4>
            <hr />
            <form asp-action="Manage" method="post">
                <input type="hidden" name="groupId" value="@ViewBag.GroupId" />
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="mb-3">
                    <label for="name" class="form-label">
                        <i class="bi bi-person"></i> Tên người dùng <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="name" name="name" required />
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">
                        <i class="bi bi-at"></i> Tên đăng nhập <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="username" name="username" required />
                    @if (ViewData.ModelState["username"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["username"]!.Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">
                        <i class="bi bi-lock"></i> Mật khẩu <span class="text-danger">*</span>
                    </label>
                    <input type="password" class="form-control" id="password" name="password" required minlength="6" />
                    <small class="text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                    @if (ViewData.ModelState["password"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["password"]!.Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Tạo Admin
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

