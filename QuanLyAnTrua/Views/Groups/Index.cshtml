@model IEnumerable<QuanLyAnTrua.Models.Group>

@{
    ViewData["Title"] = "Quản lý nhóm";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-people-fill"></i> Quản lý nhóm</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tạo nhóm mới
    </a>
</div>

<table id="groupsTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên nhóm</th>
            <th>Mô tả</th>
            <th>Người tạo</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.Description ?? "-")</td>
                <td>@item.Creator?.Name</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Không hoạt động</span>
                    }
                </td>
                <td>
                    <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        <i class="bi bi-person-plus"></i> Quản lý Admin
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i> Sửa
                    </a>
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                        data-bs-target="#deleteModal@(item.Id)">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#groupsTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                },
                pageLength: 25,
                order: [[3, 'desc']], // Sắp xếp theo ngày tạo giảm dần
                columnDefs: [
                    { orderable: false, targets: 5 } // Tắt sắp xếp cho cột Thao tác
                ]
            });
        });
    </script>
}

@foreach (var item in Model)
{
    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(item.Id)"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel@(item.Id)">Xác nhận xóa nhóm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa nhóm <strong>@item.Name</strong>?</p>
                    <p class="text-danger"><small>Hành động này không thể hoàn tác.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
