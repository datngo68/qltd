@model QuanLyAnTrua.Models.User

@{
    ViewData["Title"] = "Thêm người dùng";
}

<h2>Thêm người dùng</h2>
<hr />

<div class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Username" class="form-label">
                    <i class="bi bi-person-badge"></i> Tên đăng nhập <span class="text-danger">*</span>
                </label>
                <input type="text" class="form-control" id="Username" name="Username" required />
                <small class="text-muted">Tên đăng nhập để user đăng nhập vào hệ thống</small>
                @if (ViewData.ModelState["Username"]?.Errors?.Count > 0)
                {
                    <span class="text-danger d-block">@ViewData.ModelState["Username"]!.Errors[0].ErrorMessage</span>
                }
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">
                    <i class="bi bi-lock"></i> Mật khẩu <span class="text-danger">*</span>
                </label>
                <input type="password" class="form-control" id="Password" name="Password" required minlength="6" />
                <small class="text-muted">Mật khẩu phải có ít nhất 6 ký tự</small>
                @if (ViewData.ModelState["Password"]?.Errors?.Count > 0)
                {
                    <span class="text-danger d-block">@ViewData.ModelState["Password"]!.Errors[0].ErrorMessage</span>
                }
            </div>
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" checked />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
            @if (ViewBag.CanCreateAdmin == true)
            {
                <div class="mb-3">
                    <label asp-for="Role" class="form-label">
                        <i class="bi bi-person-badge"></i> Vai trò
                    </label>
                    <select asp-for="Role" class="form-select">
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                        @if (ViewBag.IsSuperAdmin == true)
                        {
                            <option value="SuperAdmin">SuperAdmin</option>
                        }
                    </select>
                    <small class="text-muted">Admin phải thuộc một nhóm</small>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            }
            @if (ViewBag.IsSuperAdmin == true)
            {
                <div class="mb-3">
                    <label for="GroupId" class="form-label">
                        <i class="bi bi-people"></i> Nhóm
                    </label>
                    <select class="form-select" id="GroupId" name="GroupId">
                        <option value="">-- Không thuộc nhóm nào (SuperAdmin) --</option>
                        @if (ViewBag.Groups != null)
                        {
                            var groups = ViewBag.Groups as List<QuanLyAnTrua.Models.Group>;
                            @if (groups != null)
                            {
                                @foreach (var group in groups)
                                {
                                    <option value="@group.Id">@group.Name</option>
                                }
                            }
                        }
                    </select>
                    <small class="text-muted">Chọn nhóm cho user (bắt buộc nếu là Admin)</small>
                    @if (ViewData.ModelState["GroupId"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["GroupId"]!.Errors[0].ErrorMessage</span>
                    }
                </div>
            }
            else if (ViewBag.IsAdmin == true && ViewBag.Groups != null)
            {
                <div class="mb-3">
                    <label for="GroupId" class="form-label">
                        <i class="bi bi-people"></i> Nhóm
                    </label>
                    <select class="form-select" id="GroupId" name="GroupId">
                        @{
                            var groups = ViewBag.Groups as List<QuanLyAnTrua.Models.Group>;
                            @if (groups != null && groups.Any())
                            {
                                @foreach (var group in groups)
                                {
                                    <option value="@group.Id" selected>@group.Name</option>
                                }
                            }
                        }
                    </select>
                    <small class="text-muted">User sẽ thuộc nhóm của Admin (bắt buộc nếu là Admin)</small>
                    @if (ViewData.ModelState["GroupId"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["GroupId"]!.Errors[0].ErrorMessage</span>
                    }
                </div>
            }
            <hr />
            <h5><i class="bi bi-bank"></i> Thông tin ngân hàng (tùy chọn)</h5>
            <div class="mb-3">
                <label asp-for="BankName" class="form-label"></label>
                <select asp-for="BankName" class="form-select" id="bankNameSelect" data-live-search="true">
                    <option value="">-- Chọn ngân hàng --</option>
                    @if (ViewBag.Banks != null)
                    {
                        var banks = ViewBag.Banks as List<QuanLyAnTrua.Helpers.BankInfo>;
                        @if (banks != null)
                        {
                            @foreach (var bank in banks)
                            {
                                <option value="@bank.Name" data-bin="@bank.BIN">@bank.Name (@bank.ShortName)</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="BankName" class="text-danger"></span>
                <small class="text-muted">Chọn ngân hàng có hỗ trợ QR code thanh toán</small>
            </div>
            <div class="mb-3">
                <label asp-for="BankAccount" class="form-label"></label>
                <input asp-for="BankAccount" class="form-control" />
                <span asp-validation-for="BankAccount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AccountHolderName" class="form-label"></label>
                <input asp-for="AccountHolderName" class="form-control" />
                <span asp-validation-for="AccountHolderName" class="text-danger"></span>
            </div>
            <hr />
            <h5><i class="bi bi-telegram"></i> Thông tin Telegram</h5>
            <div class="mb-3">
                <label asp-for="TelegramUserId" class="form-label">
                    <i class="bi bi-chat-dots"></i> Telegram User ID
                </label>
                <input asp-for="TelegramUserId" class="form-control" placeholder="Nhập Telegram User ID (ví dụ: 123456789)" />
                <span asp-validation-for="TelegramUserId" class="text-danger"></span>
                <small class="text-muted">Để nhận thông báo qua Telegram khi có chi phí mới. Lấy User ID từ <a href="https://t.me/userinfobot" target="_blank">@@userinfobot</a> trên Telegram</small>
            </div>
            <hr />
            <h5><i class="bi bi-shield-lock"></i> CASSO Webhook Secret</h5>
            <div class="mb-3">
                <label asp-for="CassoWebhookSecret" class="form-label">
                    <i class="bi bi-key"></i> Webhook Secret
                </label>
                <input asp-for="CassoWebhookSecret" class="form-control" type="password" placeholder="Nhập Webhook Secret từ CASSO" />
                <span asp-validation-for="CassoWebhookSecret" class="text-danger"></span>
                <small class="text-muted">Mã bảo mật webhook từ CASSO cho tài khoản ngân hàng này. Để trống nếu dùng WebhookSecret mặc định từ appsettings.json</small>
            </div>
            <div class="mb-3 d-flex flex-column flex-md-row gap-2">
                <button type="submit" class="btn btn-primary w-100 w-md-auto">Thêm</button>
                <a asp-action="Index" class="btn btn-secondary w-100 w-md-auto">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"
        rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bankNameSelect').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn hoặc tìm kiếm ngân hàng...',
                allowClear: true,
                language: {
                    noResults: function () {
                        return "Không tìm thấy ngân hàng";
                    },
                    searching: function () {
                        return "Đang tìm kiếm...";
                    }
                }
            });
        });
    </script>
}
