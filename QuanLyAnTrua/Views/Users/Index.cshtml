@model IEnumerable<QuanLyAnTrua.Models.User>
@using QuanLyAnTrua.Helpers

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3 gap-3">
    <h2 class="mb-0"><i class="bi bi-people"></i> Quản lý người dùng</h2>
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-2 w-100 w-md-auto">
        @if (Context.Session.GetString("Role") == "SuperAdmin" && ViewBag.Groups != null)
        {
            <form method="get" class="w-100 w-md-auto">
                <select name="groupId" class="form-select" style="min-width: 150px;" onchange="this.form.submit()">
                    <option value="">-- Tất cả nhóm --</option>
                    @foreach (var group in (List<QuanLyAnTrua.Models.Group>)ViewBag.Groups)
                    {
                        <option value="@group.Id"
                            selected="@(ViewBag.SelectedGroupId != null && ViewBag.SelectedGroupId == group.Id)">
                            @group.Name
                        </option>
                    }
                </select>
            </form>
        }
        <a asp-action="Create" class="btn btn-primary w-100 w-md-auto">
            <i class="bi bi-person-plus"></i> Thêm người dùng
        </a>
    </div>
</div>

<div class="table-responsive">
    <table id="usersTable" class="table table-striped table-hover" style="min-width: 800px;">
        <thead class="table-light">
            <tr>
                <th>Ảnh đại diện</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Tên đăng nhập</th>
                <th>Tài khoản ngân hàng</th>
                <th>Telegram</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@AvatarHelper.GetAvatarUrl(item.AvatarPath)" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@(item.Username ?? "-")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.BankName) || !string.IsNullOrEmpty(item.BankAccount))
                        {
                            <div>
                                @if (!string.IsNullOrEmpty(item.BankName))
                                {
                                    <small><i class="bi bi-building"></i> <strong>@item.BankName</strong></small>

                                    <br />
                                }
                                @if (!string.IsNullOrEmpty(item.BankAccount))
                                {
                                    <small><i class="bi bi-credit-card"></i> @item.BankAccount</small>

                                    <br />
                                }
                                @if (!string.IsNullOrEmpty(item.AccountHolderName))
                                {
                                    <small><i class="bi bi-person-badge"></i> @item.AccountHolderName</small>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.TelegramUserId))
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Đã kết nối
                            </span>
                            <br />
                            <small class="text-muted">ID: @item.TelegramUserId</small>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-x-circle"></i> Chưa kết nối
                            </span>
                            <br />
                            <small class="text-muted">Dùng lệnh /set trong Telegram</small>
                        }
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Đang hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Vô hiệu hóa</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>
                        <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mb-1">Sửa</a>
                            <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit"
                                    class="btn @(item.IsActive ? "btn-secondary" : "btn-success") w-100 mb-1">
                                    @(item.IsActive ? "Vô hiệu hóa" : "Kích hoạt")
                                </button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                <button type="submit" class="btn btn-danger w-100">Xóa</button>
                            </form>
                        </div>
                        <div class="btn-group d-none d-md-inline-flex" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-secondary" : "btn-success")">
                                    @(item.IsActive ? "Vô hiệu hóa" : "Kích hoạt")
                                </button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');">
                                <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                },
                pageLength: 25,
                order: [[6, 'desc']], // Sắp xếp theo ngày tạo giảm dần
                columnDefs: [
                    { orderable: false, targets: [0, 7] } // Tắt sắp xếp cho cột Avatar và Thao tác
                ]
            });
        });
    </script>
}
