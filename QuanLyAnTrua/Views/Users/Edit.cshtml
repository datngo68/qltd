@model QuanLyAnTrua.Models.User

@{
    ViewData["Title"] = "Sửa người dùng";
}

<h2>Sửa người dùng</h2>
<hr />

<div class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @{
                var isAdminOrSuperAdmin = ViewBag.IsSuperAdmin == true || (ViewBag.IsAdmin == true);
            }
            @if (isAdminOrSuperAdmin)
            {
                <div class="mb-3">
                    <label for="Username" class="form-label">
                        <i class="bi bi-person-badge"></i> Tên đăng nhập
                    </label>
                    <input type="text" class="form-control" id="Username" name="Username" value="@Model.Username" />
                    <small class="text-muted">Admin/SuperAdmin có thể cập nhật tên đăng nhập</small>
                    @if (ViewData.ModelState["Username"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["Username"]!.Errors[0].ErrorMessage</span>
                    }
                </div>
            }
            else
            {
                <div class="mb-3">
                    <label for="Username" class="form-label">
                        <i class="bi bi-person-badge"></i> Tên đăng nhập
                    </label>
                    <input type="text" class="form-control" id="Username" name="Username" value="@Model.Username"
                        readonly />
                    <small class="text-muted">Tên đăng nhập không thể thay đổi</small>
                </div>
            }
            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
            @if (ViewBag.CanCreateAdmin == true)
            {
                <div class="mb-3">
                    <label for="Role" class="form-label">
                        <i class="bi bi-person-badge"></i> Vai trò
                    </label>
                    <select class="form-select" id="Role" name="Role">
                        <option value="User" selected="@(Model.Role == "User")">User</option>
                        <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                        @if (ViewBag.IsSuperAdmin == true)
                        {
                            <option value="SuperAdmin" selected="@(Model.Role == "SuperAdmin")">SuperAdmin</option>
                        }
                    </select>
                    <small class="text-muted">Admin phải thuộc một nhóm</small>
                    @if (ViewData.ModelState["Role"]?.Errors?.Count > 0)
                    {
                        <span class="text-danger d-block">@ViewData.ModelState["Role"]!.Errors[0].ErrorMessage</span>
                    }
                </div>
            }
            @if (ViewBag.IsSuperAdmin == true)
            {
                <div class="mb-3">
                    <label for="GroupId" class="form-label">
                        <i class="bi bi-people"></i> Nhóm
                    </label>
                    <select class="form-select" id="GroupId" name="GroupId">
                        <option value="">-- Không thuộc nhóm nào (SuperAdmin) --</option>
                        @if (ViewBag.Groups != null)
                        {
                            var groups = ViewBag.Groups as List<QuanLyAnTrua.Models.Group>;
                            @if (groups != null)
                            {
                                @foreach (var group in groups)
                                {
                                    <option value="@group.Id" selected="@(Model.GroupId == group.Id)">@group.Name</option>
                                }
                            }
                        }
                    </select>
                    <small class="text-muted">SuperAdmin có thể thay đổi nhóm của user</small>
                </div>
            }
            else if (ViewBag.IsAdmin == true)
            {
                <div class="mb-3">
                    <label for="GroupId" class="form-label">
                        <i class="bi bi-people"></i> Nhóm
                    </label>
                    <select class="form-select" id="GroupId" name="GroupId">
                        @if (ViewBag.Groups != null)
                        {
                            var groups = ViewBag.Groups as List<QuanLyAnTrua.Models.Group>;
                            @if (groups != null)
                            {
                                @foreach (var group in groups)
                                {
                                    <option value="@group.Id" selected="@(Model.GroupId == group.Id)">@group.Name</option>
                                }
                            }
                        }
                    </select>
                    <small class="text-muted">Admin chỉ có thể thay đổi nhóm trong nhóm của mình</small>
                </div>
            }
            <hr />
            <h5><i class="bi bi-lock"></i> Đặt lại mật khẩu (tùy chọn)</h5>
            <div class="mb-3">
                <label for="NewPassword" class="form-label">
                    Mật khẩu mới
                </label>
                <input type="password" class="form-control" id="NewPassword" name="NewPassword" minlength="6" />
                <small class="text-muted">Để trống nếu không muốn thay đổi mật khẩu. Mật khẩu phải có ít nhất 6 ký
                    tự.</small>
                @if (ViewData.ModelState["NewPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-danger d-block">@ViewData.ModelState["NewPassword"]!.Errors[0].ErrorMessage</span>
                }
            </div>
            <hr />
            <h5><i class="bi bi-bank"></i> Thông tin ngân hàng (tùy chọn)</h5>
            <div class="mb-3">
                <label asp-for="BankName" class="form-label"></label>
                <select asp-for="BankName" class="form-select" id="bankNameSelect" data-live-search="true">
                    <option value="">-- Chọn ngân hàng --</option>
                    @if (ViewBag.Banks != null)
                    {
                        var banks = ViewBag.Banks as List<QuanLyAnTrua.Helpers.BankInfo>;
                        @if (banks != null)
                        {
                            @foreach (var bank in banks)
                            {
                                <option value="@bank.Name" selected="@(Model.BankName == bank.Name)" data-bin="@bank.BIN">@bank.Name
                                    (@bank.ShortName)</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="BankName" class="text-danger"></span>
                <small class="text-muted">Chọn ngân hàng có hỗ trợ QR code thanh toán</small>
            </div>
            <div class="mb-3">
                <label asp-for="BankAccount" class="form-label"></label>
                <input asp-for="BankAccount" class="form-control" />
                <span asp-validation-for="BankAccount" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AccountHolderName" class="form-label"></label>
                <input asp-for="AccountHolderName" class="form-control" />
                <span asp-validation-for="AccountHolderName" class="text-danger"></span>
            </div>
            <div class="mb-3 d-flex flex-column flex-md-row gap-2">
                <button type="submit" class="btn btn-primary w-100 w-md-auto">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary w-100 w-md-auto">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"
        rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bankNameSelect').select2({
                theme: 'bootstrap-5',
                placeholder: 'Chọn hoặc tìm kiếm ngân hàng...',
                allowClear: true,
                language: {
                    noResults: function () {
                        return "Không tìm thấy ngân hàng";
                    },
                    searching: function () {
                        return "Đang tìm kiếm...";
                    }
                }
            });
        });
    </script>
}
