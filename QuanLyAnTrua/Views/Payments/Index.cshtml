<h3 class="mt-4 mb-3"><i class="bi bi-receipt-cutoff"></i> Chi tiết chi phí</h3>
<div class="table-responsive">
    <table id="expensesDetailsTable" class="table table-striped" style="min-width: 700px;">
        <thead class="table-light">
            <tr>
                <th>Ngày</th>
                <th>Số tiền</th>
                <th>Người chi</th>
                <th>Người ăn &amp; số tiền</th>
                <th>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model.Expenses)
            {
                <tr>
                    <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                    <td>@expense.Amount.ToString("N0") đ</td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <img src="@AvatarHelper.GetAvatarUrl(expense.PayerAvatarPath)" alt="Avatar"
                                class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;" />
                            <span>@expense.PayerName</span>
                        </div>
                    </td>
                    <td>
                        @{
                            var rawParticipantNames = expense.ParticipantNames ?? new List<string>();
                            var participantIdToName = expense.ParticipantIdToName ?? new Dictionary<int, string>();
                            var participantIdToAvatar = expense.ParticipantIdToAvatarPath ?? new Dictionary<int, string?>();

                            var participantInfos = participantIdToName
                            .Select(kvp =>
                            {
                                participantIdToAvatar.TryGetValue(kvp.Key, out var avatarPath);
                                return (Key: kvp.Key, Name: kvp.Value, Avatar: avatarPath);
                            })
                            .ToList();

                            if (!participantInfos.Any() && rawParticipantNames.Any())
                            {
                                var tempIndex = -1;
                                foreach (var name in rawParticipantNames)
                                {
                                    participantInfos.Add((Key: tempIndex, Name: name, Avatar: (string?)null));
                                    tempIndex--;
                                }
                            }

                            var participantAmounts = new Dictionary<int, decimal>();
                            if (expense.ParticipantAmounts != null && expense.ParticipantAmounts.Any())
                            {
                                foreach (var kvp in expense.ParticipantAmounts)
                                {
                                    participantAmounts[kvp.Key] = Math.Round(kvp.Value, 2);
                                    if (!participantInfos.Any(pi => pi.Key == kvp.Key))
                                    {
                                        participantIdToAvatar.TryGetValue(kvp.Key, out var avatarPath);
                                        participantInfos.Add((Key: kvp.Key, Name: $"Người dùng {kvp.Key}", Avatar: avatarPath));
                                    }
                                }

                                var remainingIds = participantInfos
                                .Where(pi => !participantAmounts.ContainsKey(pi.Key))
                                .Select(pi => pi.Key)
                                .ToList();

                                if (remainingIds.Any())
                                {
                                    var remainingAmount = expense.Amount - participantAmounts.Sum(pa => pa.Value);
                                    var equalAmount = remainingIds.Count > 0
                                    ? Math.Round(remainingAmount / remainingIds.Count, 2)
                                    : 0m;

                                    foreach (var id in remainingIds)
                                    {
                                        participantAmounts[id] = equalAmount;
                                    }
                                }
                            }
                            else if (participantInfos.Any())
                            {
                                var equalAmount = participantInfos.Count > 0
                                ? Math.Round(expense.Amount / participantInfos.Count, 2)
                                : 0m;

                                foreach (var info in participantInfos)
                                {
                                    participantAmounts[info.Key] = equalAmount;
                                }
                            }

                            if (participantInfos.Any())
                            {
                                <div class="participant-chip-list">
                                    @foreach (var info in participantInfos)
                                    {
                                        var amountValue = participantAmounts.TryGetValue(info.Key, out var value)
                                        ? value
                                        : 0m;
                                        <div class="participant-chip participant-chip--amount">
                                            <img src="@AvatarHelper.GetAvatarUrl(info.Avatar)" alt="Avatar" />
                                            <span>@info.Name</span>
                                            <span class="participant-amount-value">@amountValue.ToString("N0") đ</span>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        }
                    </td>
                    <td>@(expense.Description ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal để hiển thị QR Code lớn -->
<div class="modal fade" id="qrCodeModal" tabindex="-1" aria-labelledby="qrCodeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
