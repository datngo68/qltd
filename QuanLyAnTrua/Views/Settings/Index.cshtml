@model QuanLyAnTrua.Models.ViewModels.SettingsViewModel

@{
    ViewData["Title"] = "Cấu hình hệ thống";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-gear-fill"></i> Cấu hình hệ thống
            </h2>

            <!-- Telegram Webhook Section -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-telegram"></i> Telegram Webhook
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Trạng thái:</label>
                            <div>
                                @if (Model.TelegramWebhookEnabled)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Đã bật
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> Đã tắt
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.TelegramWebhookUrl))
                            {
                                <label class="form-label">Webhook URL:</label>
                                <div>
                                    <code>@Model.TelegramWebhookUrl</code>
                                </div>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.TelegramWebhookError))
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> @Model.TelegramWebhookError
                        </div>
                    }
                    <div>
                        <button type="button" class="btn btn-success" id="btnEnableWebhook" 
                                @(Model.TelegramWebhookEnabled ? "disabled" : "")>
                            <i class="bi bi-toggle-on"></i> Bật Webhook
                        </button>
                        <button type="button" class="btn btn-danger" id="btnDisableWebhook"
                                @(!Model.TelegramWebhookEnabled ? "disabled" : "")>
                            <i class="bi bi-toggle-off"></i> Tắt Webhook
                        </button>
                    </div>
                </div>
            </div>

            <!-- Settings Form -->
            <form asp-action="Update" method="post" id="settingsForm">
                @Html.AntiForgeryToken()

                <!-- Connection Strings -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Connection Strings</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="DefaultConnection" class="form-label"></label>
                            <input asp-for="DefaultConnection" class="form-control" />
                            <span asp-validation-for="DefaultConnection" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Casso -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Casso</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="CassoWebhookSecret" class="form-label"></label>
                                <input asp-for="CassoWebhookSecret" class="form-control" />
                                <span asp-validation-for="CassoWebhookSecret" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="CassoSecureToken" class="form-label"></label>
                                <input asp-for="CassoSecureToken" class="form-control" />
                                <span asp-validation-for="CassoSecureToken" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="CassoWebhookVersion" class="form-label"></label>
                                <input asp-for="CassoWebhookVersion" class="form-control" />
                                <span asp-validation-for="CassoWebhookVersion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Payment</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="PaymentDescriptionPrefix" class="form-label"></label>
                                <input asp-for="PaymentDescriptionPrefix" class="form-control" />
                                <span asp-validation-for="PaymentDescriptionPrefix" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PaymentDescriptionSuffix" class="form-label"></label>
                                <input asp-for="PaymentDescriptionSuffix" class="form-control" />
                                <span asp-validation-for="PaymentDescriptionSuffix" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PaymentDescriptionSeparator" class="form-label"></label>
                                <input asp-for="PaymentDescriptionSeparator" class="form-control" />
                                <span asp-validation-for="PaymentDescriptionSeparator" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Telegram -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Telegram</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TelegramBotToken" class="form-label"></label>
                                <input asp-for="TelegramBotToken" class="form-control" type="password" placeholder="Để trống nếu không muốn thay đổi" />
                                <span asp-validation-for="TelegramBotToken" class="text-danger"></span>
                                <small class="form-text text-muted">Nhập token mới để cập nhật. Để trống nếu muốn giữ nguyên token hiện tại.</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TelegramBotUsername" class="form-label"></label>
                                <input asp-for="TelegramBotUsername" class="form-control" />
                                <span asp-validation-for="TelegramBotUsername" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Parking Payment -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Parking Payment</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ParkingDefaultLicensePlate" class="form-label"></label>
                            <input asp-for="ParkingDefaultLicensePlate" class="form-control" />
                            <span asp-validation-for="ParkingDefaultLicensePlate" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="ParkingMotorbikePrice" class="form-label"></label>
                                <input asp-for="ParkingMotorbikePrice" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="ParkingMotorbikePrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ParkingCarPrice" class="form-label"></label>
                                <input asp-for="ParkingCarPrice" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="ParkingCarPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ParkingCarOvernightPrice" class="form-label"></label>
                                <input asp-for="ParkingCarOvernightPrice" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="ParkingCarOvernightPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <h6>Company Account</h6>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="ParkingCompanyBankName" class="form-label"></label>
                                <input asp-for="ParkingCompanyBankName" class="form-control" />
                                <span asp-validation-for="ParkingCompanyBankName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ParkingCompanyAccountNumber" class="form-label"></label>
                                <input asp-for="ParkingCompanyAccountNumber" class="form-control" />
                                <span asp-validation-for="ParkingCompanyAccountNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ParkingCompanyAccountHolder" class="form-label"></label>
                                <input asp-for="ParkingCompanyAccountHolder" class="form-control" />
                                <span asp-validation-for="ParkingCompanyAccountHolder" class="text-danger"></span>
                            </div>
                        </div>
                        <h6>Staff Account</h6>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="ParkingStaffBankName" class="form-label"></label>
                                <input asp-for="ParkingStaffBankName" class="form-control" />
                                <span asp-validation-for="ParkingStaffBankName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ParkingStaffAccountNumber" class="form-label"></label>
                                <input asp-for="ParkingStaffAccountNumber" class="form-control" />
                                <span asp-validation-for="ParkingStaffAccountNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ParkingStaffAccountHolder" class="form-label"></label>
                                <input asp-for="ParkingStaffAccountHolder" class="form-control" />
                                <span asp-validation-for="ParkingStaffAccountHolder" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Avatar -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Avatar</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AvatarUploadPath" class="form-label"></label>
                                <input asp-for="AvatarUploadPath" class="form-control" />
                                <span asp-validation-for="AvatarUploadPath" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="AvatarMaxFileSize" class="form-label"></label>
                                <input asp-for="AvatarMaxFileSize" class="form-control" type="number" />
                                <span asp-validation-for="AvatarMaxFileSize" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label asp-for="AvatarAllowedExtensions" class="form-label"></label>
                                <input asp-for="AvatarAllowedExtensions" class="form-control" />
                                <span asp-validation-for="AvatarAllowedExtensions" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu cấu hình
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Enable Webhook
            $('#btnEnableWebhook').click(function() {
                if (confirm('Bạn có chắc chắn muốn bật Telegram webhook?')) {
                    $.ajax({
                        url: '@Url.Action("ToggleTelegramWebhook", "Settings")',
                        type: 'POST',
                        data: {
                            enable: true,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert('Lỗi: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('Có lỗi xảy ra khi gửi yêu cầu.');
                        }
                    });
                }
            });

            // Disable Webhook
            $('#btnDisableWebhook').click(function() {
                if (confirm('Bạn có chắc chắn muốn tắt Telegram webhook?')) {
                    $.ajax({
                        url: '@Url.Action("ToggleTelegramWebhook", "Settings")',
                        type: 'POST',
                        data: {
                            enable: false,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            if (response.success) {
                                alert(response.message);
                                location.reload();
                            } else {
                                alert('Lỗi: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('Có lỗi xảy ra khi gửi yêu cầu.');
                        }
                    });
                }
            });
        });
    </script>
}

